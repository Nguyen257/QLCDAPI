@model PagedList.IPagedList<QLDHCDAPI.Models.DHCD>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Danh sách đại hội cổ đông";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách đại hội cổ đông</h2>

<p>
    @Html.ActionLink("Tạo mới đại hội cổ đông", "Create") | @Html.ActionLink("Thêm ứng viên HĐQT", "AddUngVienHDQT") |@Html.ActionLink("Thêm ứng viên BKS", "AddUngVienBKS")
</p>
<p>
    @Html.ActionLink("Cập nhật số lương phát hành cổ phiếu", "ChotCoDongThamDu")
</p>
@using (Html.BeginForm("Index", "DHCD", FormMethod.Get))
{
    <p>
        Tìm theo tên: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Tìm kiếm" class="btn btn-success" />
    </p>
}
<table class="table table-striped table-hover ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().MADH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().TenDH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().LABAUBOSUNG)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().thoiGian)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().ACTIVE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().TONGSOPHIEU)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MADH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenDH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LABAUBOSUNG)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.thoiGian)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ACTIVE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TONGSOPHIEU)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "EditDHCD", new { madh = item.MADH }, null) |
                @Html.ActionLink("Chi tiết", "DetailDHCD", new { madh = item.MADH }, null) |
                @Html.ActionLink("Xóa", "Delete", new { madh = item.MADH }, null)
            </td>
        </tr>
    }

</table>
<div>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter }))
</div>

<span id="popupNotification"></span>

@section Scripts{
    <script>
        $(document).ready(function () {
            var popupAlert = $("#popupNotification").kendoNotification().data("kendoNotification");
            if ('@(ViewBag.Alert + string.Empty)' != null && '@(ViewBag.Alert + string.Empty)' != '') {
                popupAlert.show('@(ViewBag.Alert + string.Empty)');
            }
        });
    </script>
}