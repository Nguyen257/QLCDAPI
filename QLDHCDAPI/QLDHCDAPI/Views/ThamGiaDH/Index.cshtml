@model PagedList.IPagedList<QLDHCDAPI.Models.CT_DHCD>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Danh sách cổ đông tham gia đại hội";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách cổ đông tham gia đại hội</h2>

<p>
    @Html.ActionLink("Đăng ký tham gia đại hội", "Create")
</p>
@using (Html.BeginForm("Index", "ThamGiaDH", FormMethod.Get))
{
    <p>
        Tìm theo tên: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Tìm kiếm" class="btn btn-success" />
    </p>
}
<table class="table table-striped table-hover ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().MATD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().DHCD.TenDH)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().CODONG.HoTen)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().SLCP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().SLDAUQ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().SLDCUQ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().HTDK)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().SLCPSAUCUNG)
        </th>



        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MATD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DHCD.TenDH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CODONG.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SLCP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SLDAUQ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SLDCUQ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HTDK)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SLCPSAUCUNG)
            </td>

            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { matd = item.MATD}) |
                @Html.ActionLink("Chi tiết", "Details", new { matd = item.MATD }) |
                @Html.ActionLink("Xóa", "Delete", new { matd = item.MATD })
            </td>
        </tr>
    }

</table>

<div>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter }))
</div>

<span id="popupNotification"></span>

@section Scripts{
    <script>
        $(document).ready(function () {
            var popupAlert = $("#popupNotification").kendoNotification().data("kendoNotification");
            if ('@(ViewBag.Alert + string.Empty)' != null && '@(ViewBag.Alert + string.Empty)' != '') {
                popupAlert.show('@(ViewBag.Alert + string.Empty)');
            }
        });
    </script>
}