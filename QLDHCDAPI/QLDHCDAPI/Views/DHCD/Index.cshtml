@model IEnumerable<QLDHCDAPI.Models.DHCD>

@{
    ViewBag.Title = "Danh sách đại hội cổ đông";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách đại hội cổ đông</h2>

<p>
    @Html.ActionLink("Tạo mới đại hội cổ đông", "Create")
</p>
<table class="table table-striped table-hover ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MADH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenDH)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.thoiGian)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ACTIVE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TONGSOPHIEU)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MADH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenDH)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.thoiGian)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ACTIVE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TONGSOPHIEU)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "EditDHCD", new { madh = item.MADH }, null) |
                @Html.ActionLink("Chi tiết", "DetailDHCD", new { madh = item.MADH }, null) |
                @Html.ActionLink("Xóa", "Delete", new { madh = item.MADH }, null)
            </td>
        </tr>
    }

</table>
